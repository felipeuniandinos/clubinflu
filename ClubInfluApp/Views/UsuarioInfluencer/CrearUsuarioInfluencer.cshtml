@using ClubInfluApp.ViewModels
@model NuevoUsuarioInfluencerViewModel

@{
    ViewData["BodyClass"] = "CrearUsuarioInfluencer-page";
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<form asp-controller="UsuarioInfluencer" asp-action="CrearUsuarioInfluencer" method="post">
    <fieldset>
        <legend>Información del Usuario</legend>

        <div class="mb-3">
            <label asp-for="correo" class="form-label">Correo</label>
            <input asp-for="correo" class="form-control" required />
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="clave" class="form-label">Clave</label>
            <input asp-for="clave" type="password" class="form-control" required />
            <span asp-validation-for="clave" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset>
        <legend>Información del Influencer</legend>

        <div class="mb-3">
            <label asp-for="nombre" class="form-label">Nombre</label>
            <input asp-for="nombre" class="form-control" required />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input asp-for="fechaNacimiento" type="date" class="form-control" required />
            <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="numeroContacto" class="form-label">Número de Contacto</label>
            <input asp-for="numeroContacto" class="form-control" />
            <span asp-validation-for="numeroContacto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="idGenero" class="form-label">Género</label>
            <select asp-for="idGenero" class="form-select" required>
                <option value="">Seleccione un género</option>
                <option value="1">Masculino</option>
                <option value="2">Femenino</option>
                <option value="3">Otro</option>
            </select>
            <span asp-validation-for="idGenero" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset>
        <legend>Ciudades de Influencia</legend>

        <div class="mb-3">
            <label asp-for="idCiudad" class="form-label">Ciudad Principal</label>
            <input asp-for="idCiudad" class="form-control" required />
            <span asp-validation-for="idCiudad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="idCiudad2" class="form-label">Ciudad Secundaria</label>
            <input asp-for="idCiudad2" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="idCiudad3" class="form-label">Ciudad 3</label>
            <input asp-for="idCiudad3" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="idCiudad4" class="form-label">Ciudad 4</label>
            <input asp-for="idCiudad4" class="form-control" />
        </div>
    </fieldset>

    <fieldset>
        <legend>Redes Sociales</legend>

        <div id="redesSocialesContainer">
            <!-- Contenedor dinámico para redes sociales -->
        </div>

        <button type="button" class="btn btn-secondary" id="addRedSocial">Agregar Red Social</button>
    </fieldset>

    <button type="submit" class="btn btn-primary mt-3">Crear Usuario Influencer</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/usuarioinfluencer/crearusuarioinfluencer.js"></script>
}