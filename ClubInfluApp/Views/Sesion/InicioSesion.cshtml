@using ClubInfluApp.ViewModels
@model UsuarioViewModel

@{
    ViewData["BodyClass"] = "publish";
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card p-4 shadow-lg rounded-4" style="max-width: 500px; width: 100%;">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="fw-bold">Iniciar Sesión</h3>
            <button type="button" class="btn-close" onclick="window.location.href='@Url.Action("Inicio", "Inicio")'"></button>
        </div>

        <!-- Mensaje de error si la autenticación falla -->
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger text-center mt-3">
                @ViewBag.Mensaje
            </div>
        }

        <form asp-controller="Sesion" asp-action="InicioSesion" method="post" class="mt-3">
            <fieldset>
                <legend class="fw-bold text-success">Ingresa tus datos</legend>

                <div class="mb-3">
                    <label asp-for="correo" class="form-label">Correo</label>
                    <input asp-for="correo" class="form-control rounded-3" required />
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="clave" class="form-label">Clave</label>
                    <input asp-for="clave" type="password" class="form-control rounded-3" required />
                    <span asp-validation-for="clave" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="tipo" class="form-label">Tipo de Usuario</label>
                    <select asp-for="tipo" asp-items="Html.GetEnumSelectList<TipoUsuario>()" class="form-select rounded-3" required>
                        <option value="">Seleccione el tipo de usuario</option>
                    </select>
                    <span asp-validation-for="tipo" class="text-danger"></span>
                </div>
            </fieldset>

            <button type="submit" id="btnIniciarSesion" class="btn btn-dark w-100 py-2 rounded-pill fw-bold">
                Iniciar Sesión
            </button>
        </form>
    </div>
</div>

<!-- Activa la validación en el cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}