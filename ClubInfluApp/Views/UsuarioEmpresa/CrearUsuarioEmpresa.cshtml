@using ClubInfluApp.ViewModels
@model NuevoUsuarioEmpresaViewModel

@{
    ViewData["BodyClass"] = "CrearUsuarioEmpresa-page";
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

<form asp-controller="UsuarioEmpresa" asp-action="CrearUsuarioEmpresa" method="post">
    <fieldset>
        <legend>Información del Usuario</legend>

        <div class="mb-3">
            <label asp-for="correo" class="form-label">Correo</label>
            <input asp-for="correo" class="form-control" required />
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="clave" class="form-label">Clave</label>
            <input asp-for="clave" type="password" class="form-control" required />
            <span asp-validation-for="clave" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset>
        <legend>Información de la Empresa</legend>

        <div class="mb-3">
            <label asp-for="nombreEmpresa" class="form-label">Nombre</label>
            <input asp-for="nombreEmpresa" class="form-control" required />
            <span asp-validation-for="nombreEmpresa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="urlEmpresa" class="form-label">Página Web</label>
            <input asp-for="urlEmpresa" class="form-control" />
            <span asp-validation-for="urlEmpresa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="numeroContactoEmpresa" class="form-label">Número de Contacto</label>
            <input asp-for="numeroContactoEmpresa" class="form-control" />
            <span asp-validation-for="numeroContactoEmpresa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="direccionEmpresa" class="form-label">Dirección</label>
            <input asp-for="direccionEmpresa" class="form-control" required />
            <span asp-validation-for="direccionEmpresa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="idCiudadEmpresa" class="form-label">Ciudad</label>
            <input asp-for="idCiudadEmpresa" class="form-control" required />
            <span asp-validation-for="idCiudadEmpresa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="sectorEmpresa" class="form-label">Sector</label>
            <input asp-for="sectorEmpresa" class="form-control" required />
            <span asp-validation-for="sectorEmpresa" class="text-danger"></span>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Crear Usuario Empresa</button>
</form>

<!-- Activa la validación en el cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}