@{
    var viewName = ViewContext.RouteData.Values["Action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Título dinámico de la página -->
    <title>@ViewData["Title"] - ClubInfluApp</title>

    <!-- Estilos de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome (CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Estilos generales del sitio -->
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    <!-- Estilos adicionales generados automáticamente -->
    <link rel="stylesheet" href="~/ClubInfluApp.styles.css" asp-append-version="true" />

    <!-- Estilos específicos de cada vista -->
    @await RenderSectionAsync("Styles", required: false)
</head>

<!-- Define una clase dinámica en el body para personalizar estilos por página -->
<body class="@ViewData["BodyClass"]">

    <!-- Barra de navegación -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Logo e icono de Instagram -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" href="#">
                        <img src="~/imagenes/logo.png" alt="Logo" width="50">
                    </a>
                    <a href="#" class="nav-link">
                        <img src="~/imagenes/iconos/instagram.png" alt="Instagram" width="30">
                    </a>
                </div>

                <!-- Botón de menú en móviles -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú de navegación -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Marcas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Creadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Quienes Somos</a>
                        </li>
                    </ul>
                </div>

                <!-- Botón de acción e iconos de usuario -->
                <div class="d-flex align-items-center">
                    <a href="#" class="btn btn-success-custom">Solicitar Información</a>
                    <a href="#" class="nav-link me-3">
                        <i class="fas fa-user-circle text-white" style="font-size: 1.5rem;"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal de la página -->
    <div class=".container-fluid">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Aquí se inyecta el contenido de cada vista -->
        </main>
    </div>

    <!-- Pie de página -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ClubInfluApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sección para scripts adicionales en vistas específicas -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
